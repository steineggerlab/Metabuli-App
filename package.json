{
	"name": "metabuli-app",
	"author": "SunJae Lee <snjlee58@gmail.com>",
	"productName": "Metabuli App",
	"description": "Metabuli is metagenomic classifier that jointly analyze both DNA and amino acid (AA) sequences.",
	"repository": "https://github.com/steineggerlab/Metabuli-App",
	"version": "1.0.1",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"electron:deps": "make all",
		"electron:build": "npm run electron:deps && vue-cli-service electron:build --mac --win --linux",
		"electron:serve": "npm run electron:deps && vue-cli-service electron:serve",
		"postinstall": "electron-builder install-app-deps",
		"postuninstall": "electron-builder install-app-deps",
		"clean": "rimraf dist dist_electron build node_modules"
	},
	"main": "background.js",
	"dependencies": {
		"@mdi/font": "5.9.55",
		"@mdi/js": "^7.4.47",
		"app-root-dir": "^1.0.2",
		"core-js": "^3.8.3",
		"d3": "^7.9.0",
		"d3-sankey": "^0.12.3",
		"github-markdown-css": "^5.8.1",
		"marked": "^15.0.12",
		"roboto-fontface": "*",
		"save-svg-as-png": "^1.4.17",
		"taxoview": "^2.0.1",
		"uuid": "^10.0.0",
		"vue": "^3.2.13",
		"vue-router": "^4.4.0",
		"vuetify": "^3.0.0-beta.0",
		"webfontloader": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.16",
		"@babel/eslint-parser": "^7.12.16",
		"@vue/cli-plugin-babel": "~5.0.0",
		"@vue/cli-plugin-eslint": "~5.0.0",
		"@vue/cli-service": "~5.0.0",
		"electron": "^13.0.0",
		"electron-builder": "^24.13.3",
		"electron-devtools-installer": "^3.1.0",
		"eslint": "^7.32.0",
		"eslint-plugin-vue": "^8.0.3",
		"vue-cli-plugin-electron-builder": "^2.1.1",
		"vue-cli-plugin-vuetify": "~2.5.8",
		"webpack-plugin-vuetify": "^2.0.0-alpha.0"
	},
	"overrides": {
		"vue-cli-plugin-electron-builder": {
			"electron-builder": "^23.0.3"
		}
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/vue3-essential",
			"eslint:recommended"
		],
		"parserOptions": {
			"parser": "@babel/eslint-parser"
		},
		"rules": {}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not ie 11"
	]
}
